{
  "name": "Simple OTP Token Generator",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "A simple extension for generating HOTP tokens for a single secret. Supports pasting a new token from right-click context menu.",
  "action": {
    "default_icon": "assets/lock.png",
    "default_popup": "popup.html"
  },
  "background": {
    "type": "module",
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "run_at" : "document_start",
    "js": ["scripts/content.js"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "icons": {
    "16": "assets/lock.png",
    "48": "assets/lock.png",
    "128": "assets/lock.png"
  },
  "options_page": "options.html",
  "commands": {
    "paste_otp": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Paste OTP Token"
    }
  }
}
